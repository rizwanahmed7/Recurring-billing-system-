<h1>Feature Creation </h1>
<div class="panel panel-default">
  <div class="panel-body">
    <%= form_with model: @feature , url: plan_features_path do |form| %>
      <div class="field form-group">
      <% form.label :name %><br />
      <%= form.text_field :name, autofocus: true,required: true, autocomplete: "name", class: "form-control", placeholder: "Name" %>
      </div>
    <div class="field form-group">
      <% form.label :code %><br />
      <%= form.text_field :code, autofocus: true,required: true, autocomplete: "name", class: "form-control", placeholder: "Code" %>
    </div>
    <div class="field form-group">
      <% form.label :unit_price %><br />
      <%= form.number_field :unit_price, autofocus: true,required: true,min: 0,autocomplete: "name", class: "form-control", placeholder: "Unit Price" %>
    </div>
    <div class="field form-group">
      <% form.label :max_unit_limit %><br />
      <%= form.number_field :max_unit_limit, autofocus: true, required: true,min: 0, autocomplete: "name", class: "form-control", placeholder: "Max Unit Limit" %>
    </div>
    <div class="actions">
      <%= form.submit "Create Feature", class: "btn btn-primary" %>
    </div>
  </div>
<% end %> 
</div>
